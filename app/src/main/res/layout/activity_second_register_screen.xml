<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SecondRegisterScreen"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/ac_secondRegister_imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/loginlogo"
            android:layout_marginTop="@dimen/_60sdp" />

        <EditText
            android:id="@+id/ac_secondRegister_etUsername"
            android:layout_width="@dimen/_256sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/ac_secondRegister_imgLogo"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_background"
            android:hint="@string/username"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp" />

        <EditText
            android:id="@+id/ac_secondRegister_etFullName"
            android:layout_width="@dimen/_256sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/ac_secondRegister_etUsername"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/fullName"
            android:inputType="text"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp" />

        <EditText
            android:id="@+id/ac_secondRegister_etEmail"
            android:layout_width="@dimen/_256sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/ac_secondRegister_etFullName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/emailHint"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp" />

        <EditText
            android:id="@+id/ac_secondRegister_etPassword"
            android:layout_width="@dimen/_256sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/ac_secondRegister_etEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp" />

        <EditText
            android:id="@+id/ac_secondRegister_etConfirmPassword"
            android:layout_width="@dimen/_256sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/ac_secondRegister_etPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/confirmPassword"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp" />

        <Button
            android:id="@+id/ac_secondRegister_btnRegister"
            android:layout_width="@dimen/_256sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/ac_secondRegister_etConfirmPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/button_background"
            android:hint="@string/kayitOl"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:textColorHint="@color/btnGirisHint" />

    </RelativeLayout>

</LinearLayout>